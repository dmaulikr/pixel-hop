var fbStatus;
fbStatus = facebook_status();                                       // Get the Facebook status

switch (fbStatus)                                          
{
case "AUTHORISED":                                                  //Facebook authorised!
    global.Auth = true;
    global.facebook_token = facebook_accesstoken();
    //ok lets get there name
    instance_create(0, 0, obj_fbname); 
    break;   
case "IDLE":                                                        //facebook initialised - ready to login  
    global.Auth = false;
    alarm[0] = room_speed; 
    break;   
